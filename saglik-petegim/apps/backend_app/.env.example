# Application Settings
APP_NAME="Sağlık Peteğim API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development
API_V1_STR="/api/v1"
SECRET_KEY="your-super-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# Database Configuration
DATABASE_URL="postgresql+asyncpg://username:password@localhost:5432/saglik_petegim"
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_KEY="your-service-key-here"
SUPABASE_JWT_SECRET="your-jwt-secret-here"
SUPABASE_DB_PASSWORD="your-database-password-here"
USE_SUPABASE=false  # Set to true to use Supabase instead of direct PostgreSQL

# Redis Configuration (for Celery and Caching)
REDIS_URL="redis://localhost:6379/0"
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# Email Configuration
SMTP_TLS=true
SMTP_SSL=false
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME="Sağlık Peteğim"
EMAIL_TEMPLATES_DIR="app/templates/email"

# File Storage Configuration
# S3/MinIO Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=saglik-petegim-files
S3_ENDPOINT_URL=http://localhost:9000  # For MinIO
USE_S3=false  # Set to true for production

# Local file storage (when USE_S3=false)
UPLOAD_DIR="uploads"
MAX_FILE_SIZE_MB=10

# Security Configuration
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Logging Configuration
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Monitoring and Observability
SENTRY_DSN=""
PROMETHEUS_METRICS=true

# Healthcare Specific Settings
CLINIC_NAME="Sağlık Peteğim"
CLINIC_ADDRESS="İstanbul, Türkiye"
CLINIC_PHONE="+90 XXX XXX XX XX"
CLINIC_EMAIL="info@saglikpetegim.com"
WORKING_HOURS_START="09:00"
WORKING_HOURS_END="18:00"
APPOINTMENT_DURATION_MINUTES=30
MAX_APPOINTMENTS_PER_DAY=20

# Vaccination Schedule Settings
VACCINATION_REMINDER_DAYS=7  # Days before vaccination to send reminder
GROWTH_CHART_UPDATE_INTERVAL_DAYS=30

# SMS Configuration (for notifications)
SMS_PROVIDER=twilio  # twilio, aws_sns, or custom
SMS_FROM_NUMBER="+1234567890"
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Encryption Settings (for sensitive data)
ENCRYPTION_KEY="your-32-byte-base64-encoded-key"  # For field-level encryption

# Background Task Settings
CELERY_TIMEZONE="Europe/Istanbul"
CELERY_TASK_ALWAYS_EAGER=false  # Set to true for testing
BEAT_SCHEDULE_FILE="celerybeat-schedule"