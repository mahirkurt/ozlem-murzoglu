root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.py]
indent_size = 4
max_line_length = 88

[*.dart]
indent_size = 2
max_line_length = 80

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2
max_line_length = 80

[*.{json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 100

[Makefile]
indent_style = tab
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf