{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome with MCP Support",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ],
      "sourceMaps": true
    },
    {
      "name": "Attach to Chrome (9222)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ]
}
