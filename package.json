{
  "name": "angular-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "prebuild": "npm run i18n:sync",
    "build": "ng build",
    "predeploy": "npm run i18n:check && npm run build",
    "deploy": "firebase deploy",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "svgo": "svgo -f src/assets/illustrations/static -o src/assets/illustrations/static --config=tools/svgo.config.mjs",
    "i18n:sync": "node tools/i18n-auto-sync.js",
    "i18n:validate": "node scripts/validate-translations.js",
    "i18n:clean": "node scripts/clean-unused-translations.js",
    "i18n:check": "npm run i18n:sync && npm run i18n:validate"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^16.0.0",
    "@types/marked": "^5.0.2",
    "mammoth": "^1.10.0",
    "marked": "^16.2.1",
    "puppeteer": "^24.17.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.20",
    "@angular/cli": "^18.2.20",
    "@angular/compiler-cli": "^18.2.0",
    "@playwright/test": "^1.55.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lighthouse": "12.8.2",
    "playwright": "^1.55.0",
    "stylelint": "16.24.0",
    "stylelint-config-standard-scss": "16.0.0",
    "stylelint-order": "7.0.0",
    "svgo": "^4.0.0",
    "typescript": "~5.5.2"
  }
}
